<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.stevenfu.warehouse.ProductEditActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="名称："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:text="@string/action_settings"
            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="规格："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtSpecification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="单位："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="长："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="宽："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="高："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="单价："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="品牌："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="条码："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSave"
            android:text="Save"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
