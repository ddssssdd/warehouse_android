<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stocks_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.stevenfu.warehouse.StocksInActivity"
    tools:showIn="@layout/activity_stocks_in">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:background="@drawable/linearlayout_background"
            android:layout_margin="0.5dip"
            android:layout_height="@dimen/tablerow_height">
            <TextView
                android:text="发票号码"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtInvoiceNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_height="@dimen/tablerow_height"
            android:background="@drawable/linearlayout_background">
            <TextView
                android:text="供应商"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spVendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_height="@dimen/tablerow_height"
            android:background="@drawable/linearlayout_background">
            <TextView
                android:text="入库日期"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtEnteredDate"
                android:inputType="date"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_height="@dimen/tablerow_height"
            android:background="@drawable/linearlayout_background">
            <TextView
                android:text="仓库"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="新增细目"
            android:id="@+id/btnAddDetail"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog" />
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tablerow_height">
        <TextView
            android:text="商品"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:text="规格"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:text="单价"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:text="数量"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:text="合计"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:text="备注"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:text="操作"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/listDetails"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_backgroud">

    </ListView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_height="@dimen/tablerow_height"
            android:background="@drawable/linearlayout_background">
            <TextView
                android:text="合计金额"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtTotalPrice"
                android:inputType="numberDecimal"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_height="@dimen/tablerow_height"
            android:background="@drawable/linearlayout_background">
            <TextView
                android:text="合计数量"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtTotalNo"
                android:inputType="numberDecimal"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_height="@dimen/tablerow_height"
            android:background="@drawable/linearlayout_background">
            <TextView
                android:text="备注"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMemo"
                android:inputType="text"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.EditText" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                />
        </TableRow>

    </TableLayout>

</LinearLayout>
