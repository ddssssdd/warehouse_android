<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stevenfu.warehouse.ClientEditActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/linearlayout_background"
        android:layout_height="wrap_content">
        <TextView
            android:text="名称："
            android:textAlignment="viewEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:text="@string/action_settings"
            android:id="@+id/edtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="地址："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="电话："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="传真："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtFax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="邮箱："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="联系人："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="手机："
            android:textAlignment="textEnd"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingRight="10px"
            android:layout_width="100dp"
            />
        <EditText
            android:id="@+id/edtContactCellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnSave"
            android:text="Save"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
